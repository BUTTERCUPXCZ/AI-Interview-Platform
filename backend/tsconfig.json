{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "ES2020"
    ]
  },
  "include": [
    "src/**/*",
    "controller/**/*",
    "routes/**/*",
    "config/**/*",
    "middleware/**/*",
    "services/**/*",
    "models/**/*",
    "lib/**/*",
    "utils/**/*",
    "src/generated/**/*",
    "__tests__/**/*"
  ]
}